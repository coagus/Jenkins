def InputCSVPath

pipeline {
    agent any

    stages {
        stage('Cargar CSV') {
            steps {
                script {
					echo "*** SE PIDE EL CSV PARA CARGARLO ***"
                    InputCSVPath = input message:'Cargar', parameters:  [file(name:'archivo.csv', description:'Cargar CSV')]
                }                
            }
        }
    }
}